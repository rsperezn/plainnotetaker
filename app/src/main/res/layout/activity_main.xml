<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_gettingStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/hint_gettingStarted"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#b0bec5"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listView_allNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_gettingStarted"
        android:divider="@color/line_separator"
        android:dividerHeight="1dp">
    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_done"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="#0288d1"
        app:rippleColor="#FFF"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>